{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": 
    {
        "Armstorage": {
            "type": "string",
            "defaultValue":"storedevops",
            "maxLength":24,
            "minLength":3,
            "metadata": {
                "description": "description"
            }
        
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Specify a location for the resources."
            }
        },
        "storageSKU": {
            "type": "string",
            "defaultValue": "Standard_LRS",
             "allowedValues": [
                    "Standard_LRS",
                    "Standard_GRS",
                    "Standard_RAGRS",
                    "Standard_ZRS",
                    "Premium_LRS",
                    "Premium_ZRS",
                    "Standard_GZRS",
                    "Standard_RAGZRS"
            ],
        "metadata": {
                "description": "Specify the storage account type."
                }
        }
    },
    "resources": [{
        "name": "[parameters('Armstorage')]",
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2019-06-01",
         "location": "[parameters('location')]",
        "kind": "StorageV2",
        "properties": {
        "supportsHttpsTrafficOnly": true
        },
        "sku": {
            "name": "[parameters('storageSKU')]",
            "tier": "Standard"
        }
    }
    ],
    "outputs": {
        "storageEndpoint": {
            "type": "object",
            "value": "[reference(parameters('Armstorage')).primaryEndpoints]"
        }
    }
}