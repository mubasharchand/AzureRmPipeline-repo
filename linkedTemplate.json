{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    "pakdevapp": {
      "type": "string",
      "minLength": 3,
      "maxLength": 11,
      "metadata": {
        "description": "Specify a project name that is used to generate resource names."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Specify a location for the resources."
      }
    },
    "linuxFxVersion": {
      "type": "string",
      "defaultValue": "php|7.0",
      "metadata": {
        "description": "The Runtime stack of current web app"
      }
    },
    "linkedTemplateUri": {
      "type": "string",
      "metadata": {
        "description": "The Uri of the linked template."
      }
    }
  },
    "functions": [],
    "variables": {
        "Armstorage": "[concat(parameters('pakdevapp'),uniqueString(resourceGroup().id))]",
        "webApp": "[concat(parameters('pakdevapp'),uniqueString(resourceGroup().id))]",
        "appsevrivceplan": "[concat(parameters('pakdevapp'),uniqueString(resourceGroup().id))]"
        
    },
    "resources": [
      {
      "name": "linkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('linkedTemplateUri')]"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[variables('Armstorage')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('appsevrivceplan')]",
            "sku": {
                "name": "F1",
                "tier": "FREE",
                "size": "F1",
                "family": "F",
                "capacity": 1
            },
            "kind": "linux",
            "properties": {
                "perSiteScaling": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": true,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('webApp')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appsevrivceplan'))]"
             ],
            "kind": "app",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appsevrivceplan'))]",
                "siteConfig": {
                "linuxFxVersion": "[parameters('linuxFxVersion')]"
                }
            }
        }
    ],
    "outputs": {
      "storageURi": {
        "type": "string",
        "value": "[reference('Armstorage').outputs.storageEndpoint.value]"
      }
    }
}